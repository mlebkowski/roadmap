{% extends 'layouts/base.layout.html.twig' %}
{% block body %}
    <div class="container" id="roadmap-app">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation"><div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">
                    <img src="{{ account.avatarUrl }}" width="24" height="24"> {{ account.name }}</a>
            </div>

            <ul class="nav navbar-nav navbar-right">
                <li{% if activeMenu == "add-project" %} class="active"{% endif %}>
                    <a href="/add-project">{{ "add-project"|trans }}</a>
                </li>
                <li{% if activeMenu == "projects" %} class="active"{% endif %}>
                    <a href="/">{{ "projects"|trans }}</a>
                </li>
                <li{% if activeMenu == "team" %} class="active"{% endif %}>
                    <a href="/team">{{ "team"|trans }}</a>
                </li>
                <li{% if activeMenu == "you" %} class="active"{% endif %}>
                    <a href="/you">{{ "you"|trans }}</a>
                </li>
            </ul>
        </div></nav>
    </div>

    <div id="content" class="container">{% block content %}{% endblock %}</div>
{% endblock %}